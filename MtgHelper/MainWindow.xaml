<Window x:Class="MtgHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<!--	<Image Source="{Binding Image}" MouseDown="MouseDown" MouseUp="MouseUp" MouseMove="MouseMove"></Image>-->
			<ListView ItemsSource="{Binding Images}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<StackPanel>
						<Border Padding="4" BorderBrush="Blue" BorderThickness="2">
							<Image Source="{Binding}" />
					</Border>
					</StackPanel>
						
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
    </Grid>
</Window>
