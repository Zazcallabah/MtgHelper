<Window x:Class="MtgHelper.Calibrator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calibrator" Height="640" Width="480">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
		</Grid.RowDefinitions>
		<Canvas Name="cnvImage">
			<Image Name="imgPreview" Source="{Binding Screen}" MouseLeftButtonDown="MouseDown" MouseMove="MouseMove" PreviewMouseUp="ImgPreview_OnPreviewMouseUp" />
		</Canvas>
		
	</Grid>
</Window>
